<%= form_with url: '/vehicles', method: :post, local:true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :need_repair %>
  <%= form.check_box :need_repair %>

  <%= form.label :repair_cost %>
  <%= form.text_field :repair_cost %>

  <%= form.label :autoshop_id %>
  <%= form.text_field :autoshop_id %>

  <%= form.submit "Create Vehicle" %>
<% end %>

